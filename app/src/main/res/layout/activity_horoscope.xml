<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hình nền full màn hình -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView để chứa nội dung có thể cuộn -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footer_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container chứa nội dung căn giữa -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Chi tiết Thần số học"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Container Con số định mệnh -->
            <LinearLayout
                android:id="@+id/destinyContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                android:background="#40000000"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtDestiny"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Con số định mệnh: [Số định mệnh]"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="▼"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/destinyDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Chi tiết về con số định mệnh sẽ được hiển thị ở đây"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:lineSpacingMultiplier="1.2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Container Con số tâm hồn -->
            <LinearLayout
                android:id="@+id/soulUrgeContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="#40000000"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destinyContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtSoulUrge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Con số tâm hồn: [Số tâm hồn]"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="▼"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/soulUrgeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Chi tiết về con số tâm hồn sẽ được hiển thị ở đây"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:lineSpacingMultiplier="1.2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Container Tính cách -->
            <LinearLayout
                android:id="@+id/personalityContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="#40000000"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/soulUrgeContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtPersonality"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tính cách: [Số tính cách]"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="▼"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/personalityDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Chi tiết về tính cách sẽ được hiển thị ở đây"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:lineSpacingMultiplier="1.2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Container Ngày sinh -->
            <LinearLayout
                android:id="@+id/birthDayContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="#40000000"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/personalityContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtLifePath"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày sinh: [Số ngày sinh]"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="▼"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/birthDayDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Chi tiết về ngày sinh sẽ được hiển thị ở đây"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:lineSpacingMultiplier="1.2"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Nút quay lại -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quay lại"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/birthDayContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Footer cố định dưới cùng -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Oringe@company.com | 123-456-7890 | Hoa Lac, HN1\n© Oringe Co. 2025 All Rights Reserved."
        android:textColor="#F2EFEF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>